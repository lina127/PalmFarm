@using PlamFarm.Helper
@model PlamFarm.Models.Pregnancy

@{
    ViewData["Title"] = "Delete";
}

<div>      
<h1> <a href="@Url.ActionLink("Details", "Pregnancies", new {id=Model.Id})" class="me-2"><i class="fas fa-arrow-left" style="font-size:28px;" ></i></a>Delete</h1>
</div>


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pregnancy</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PregnantDate)
        </dt>
        <dd class = "col-sm-10">
             @FormattedDate.ToFormattedDateTime(Model.PregnantDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kpn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kpn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cow)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cow.Sex)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        
    </form>
</div>
