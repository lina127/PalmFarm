@model IEnumerable<PlamFarm.Models.Pregnancy>

@{
    ViewData["Title"] = "Index";
}

 <h1> <a  href="/Home/Index" class="me-2"><i class="fas fa-arrow-left" style="font-size:28px;"></i></a>Pregnants</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Unique ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PregnantDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kpn)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Cow.UId.ToString().Substring(@item.Cow.UId.ToString().Length - 3)
                    @if(item.Cow.NickName != null)
            {
                <span style="color:#E262B0"> @Html.DisplayFor(model => item.Cow.NickName)</span>
            }
                </td>
                <td>
                    @item.PregnantDate.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kpn)
                </td>
                
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle" style="font-size:24px"></i></a> 

                    
                </td>
            </tr>
        }
    </tbody>
</table>

